@using PagedList
@using PagedList.Mvc
@model IEnumerable<MVC_Project.Models.roysched>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Roysched";
}

<h2>Roysched</h2>

<p>
    <a class="btn btn-primary" href=@Url.Action("Create") role="button">Add new Roysched</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                <a href=@Url.Action("Index", new {sortOrder = ViewBag.titleSortParm, currentFilter = ViewBag.CurrentFilter}) class="text-white" role="button">
                    @Html.DisplayNameFor(model => model.titles.title)
                </a>
            </th>
            <th>
                <a href=@Url.Action("Index", new {sortOrder = ViewBag.lorangeSortParm, currentFilter = ViewBag.CurrentFilter}) class="text-white" role="button">
                    @Html.DisplayNameFor(model => model.lorange)
                </a>
            </th>
            <th>
                <a href=@Url.Action("Index", new {sortOrder = ViewBag.hirangeSortParm, currentFilter = ViewBag.CurrentFilter}) class="text-white" role="button">
                    @Html.DisplayNameFor(model => model.hirange)
                </a>
            </th>
            <th>
                <a href=@Url.Action("Index", new {sortOrder = ViewBag.royaltySortParm, currentFilter = ViewBag.CurrentFilter}) class="text-white" role="button">
                    @Html.DisplayNameFor(model => model.royalty)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titles.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lorange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hirange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.royalty)
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a class="btn btn-primary" href=@Url.Action("Edit", new {id = item.roysched_id}) role="button">Edit</a>
                    <a class="btn btn-primary" href=@Url.Action("Details", new {id = item.roysched_id}) role="button">Details</a>
                    <a class="btn btn-primary" href=@Url.Action("Delete", new {id = item.roysched_id}) role="button">Delete</a>
                </div>
            </td>
        </tr>
    }
</table>
<div style="text-align: center">
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>