@model IEnumerable<MVC_Project.Models.discounts>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" href=@Url.Action("Create") role="button">Add new Discount</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.lowqty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.highqty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.stores.stor_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.lowqty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.highqty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.stores.stor_name)
        </td>
        <td>
            <div class="btn-group" role="group" aria-label="Basic example">
                <a class="btn btn-primary" href=@Url.Action("Edit", new { item.discounttype, item.discount }) role="button">Edit</a>
                <a class="btn btn-primary" href=@Url.Action("Details", new { item.discounttype, item.discount }) role="button">Details</a>
                <a class="btn btn-primary" href=@Url.Action("Delete", new { item.discounttype, item.discount }) role="button">Delete</a>
            </div>
        </td>
    </tr>
}

</table>
