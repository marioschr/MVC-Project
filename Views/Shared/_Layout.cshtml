<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Authors", "Index", "Authors", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Discounts", "Index", "Discounts", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Employees", "Index", "Employees", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Jobs", "Index", "Jobs", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("PubInfo", "Index", "PubInfo", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Publishers", "Index", "Publishers", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Royscheds", "Index", "Royscheds", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Sales", "Index", "Sales", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Stores", "Index", "Stores", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Title Authors", "Index", "Titleauthors", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Titles", "Index", "Titles", null, new { @class = "nav-link" })</li>

            </ul>
        </div>
    </div>
</nav>
<div class="container body-content">
    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
